<div class="col-4" style="margin-bottom: 3rem">
  <div class="card h-100 mb-3" style="max-width: 540px;">
    <div class="row g-0 mb-3">
      <div class="col-12">
        <img src="{{ images }}" class="card-img-top" alt="product image">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{ product_name }}</h5>
          <h4 class="text-body-secondary">${{ price }}</h4>
          <a id="{{id}}" class="btn btn-primary mb-4" href="#">Add to Cart</a>
          <p class="card-text">{{ product_description }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

