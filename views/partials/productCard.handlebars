<div class="col-4">
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-12">
        <img src="{{ images }}" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{ product_name }}</h5>
          <p class="card-text">{{ product_description }}</p>
          <h6 class="card-text"><small class="text-body-secondary">${{ price }}</small></h6>
          <button class="addToCart btn btn-primary float-end" data-product-id="{{id}}">Add to Cart</button>
        </div>
      </div>
    </div>
  </div>
</div>