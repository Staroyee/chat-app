<div class='col-sm-12 col-md-6 col-lg-4' style='margin-bottom: 3rem'>
  <div class='card h-100 mb-3' style='max-width: 540px;'>
    <div class='row g-0 mb-3'>
      <div class='col-12'>
        <a href='/products/{{id}}' class=''><img
            src='{{images}}'
            class='card-img-top'
            alt='product image'
          /></a>
      </div>
      <div class='col-sm-8 col-md-8'>
        <div class='card-body'>
          <h5 class='card-title mt-3'>{{product_name}}</h5>
          <h4 class='text-body-secondary'>${{price}}</h4>
          <button
            class='addToCart btn btn-primary mt-3'
            data-product-id='{{id}}'
          >Add to Cart</button>
          <p class='card-text mt-4'>{{product_description}}</p>
        </div>
      </div>
    </div>
  </div>
</div>