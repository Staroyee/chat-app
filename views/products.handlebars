<div class='container'>
  <div class='row'>
    <div class='col-4'><img
        src='{{images}}'
        class='d-block w-100'
        alt='product image'
      />
    </div>
    <div class='col-8'>
      <h4 class='card-title mt-5'>{{product_name}}</h4>
      <h4 class='text-body-secondary mt-3'>${{price}}</h4>
      <p class='card-text'>{{product_description}}</p>
      <a id='{{id}}' class='btn btn-primary mb-4' href='#'>Add to Cart</a>
    </div>
  </div>
</div>