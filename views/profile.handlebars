<div class="container mt-5">
    <div class="card" style="width: 25rem;">
        <h5 class="card-header">Account Details</h5>
        <div class="card-body">
            <h5 class="card-title">Name: {{ username }}</h5>
            <p class="card-text">Address: {{ address }}</p>
            <p class="card-text">Email: {{ email }}</p>
            <p class="card-text">Phone: {{ phone }}</p>
        </div>
    </div>
</div>
</div>

<div class="container mt-5">
    <div class="card" style="width: 10rem;">
        <h5 class="card-header">Order History</h5>
    </div>
</div>
{{> orderHistory this}}

<div class="container mt-5">
    <h5 class="header mb-4">Orders</h5>
    <div class="card" style="width: 50rem;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>{{ orderNumber }}</h5>
            <h5 class="card-summary">{{ ordertotal }}</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{ order items }}</li>
                <li class="list-group-item">{{ order items }}</li>
            </ul>
            <p class="card-text"> </p>
        </div>
    </div>

    {{#each orders}}
    <li>
        <div class="container mt-5">
            <div class="card" style="width: 50rem;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Order Number: {{ this.id }}</h5>
                    <h5 class="card-summary">Total:</h5>
                </div>
                <ul>
                    {{#each this.Products}}
                    <li>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Item: {{ this.product_id }}</li>
                                <li class="list-group-item">${{ this.price }}</li>
                            </ul>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </li>
    {{/each}}