<div class="container mt-5">
    <div class="card" style="width: 25rem;">
        <h5 class="card-header">Account Details</h5>
        <div class="card-body">
            <h5 class="card-title">Name: {{ username }}</h5>
            <p class="card-text">Address: {{ address }}</p>
            <p class="card-text">Email: {{ email }}</p>
            <p class="card-text">Phone: {{ phone }}</p>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="card" style="width: 10rem;">
        <h5 class="card-header">Order History</h5>
    </div>
</div>

{{#each orders}}
<div class="container mt-5">
    <div class="card" style="width: 50rem;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Order Number: {{ this.id }}</h5>
            <h5 class="card-summary">Total: ${{ this.product.price }}</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Item: {{ this.product.product_name }}</li>
            <li class="list-group-item">Price: ${{ this.product.price }}</li>
        </ul>
    </div>
</div>
{{/each}}